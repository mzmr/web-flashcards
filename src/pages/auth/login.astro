---
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/auth/LoginForm";

export const prerender = false;

// Przekierowanie jeśli użytkownik jest już zalogowany
if (Astro.locals.user) {
  return Astro.redirect("/card-sets");
}
---

<Layout title="Logowanie | Fiszki">
  <main class="container flex-1 flex items-center justify-center min-h-[calc(100vh-4rem)] w-full">
    <LoginForm client:load />
  </main>
</Layout>

<style>
  .container {
    max-width: 100% !important;
    width: 100% !important;
  }
</style>
