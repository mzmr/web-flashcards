---
import Layout from "@/layouts/Layout.astro";
import { AddCardsPage } from "@/components/card/AddCardsPage";

const { id } = Astro.params;
const isAuthenticated = !!Astro.locals.user;

if (!id) {
  return Astro.redirect("/card-sets");
}
---

<Layout title="Dodaj fiszki">
  <AddCardsPage client:load cardSetId={id} isAuthenticated={isAuthenticated} />
</Layout>
